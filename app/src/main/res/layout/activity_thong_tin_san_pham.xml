<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tien.ThongTinSanPhamActivity"
    android:background="@color/gray"
    android:orientation="vertical"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:text="@string/thong_tin_san_pham"
            android:textColor="@color/primary"
            android:textSize="48dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgTTSPHinh"
        android:layout_width="360dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/sanpham"
        />

    <TextView
        android:id="@+id/txtTTSPTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/san_pham"
        android:textColor="@color/black"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/txtTTSPGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/san_pham"
        android:textColor="@color/primary"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="32dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ma_san_pham"
            android:textSize="22dp"
            android:layout_weight="1"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txtTTSPMa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ma_san_pham"
            android:textSize="22dp"
            android:layout_weight="1"
            android:textAlignment="viewEnd"
            android:textColor="#666666"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="32dp"
        android:layout_marginTop="12dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xuat_xu"
            android:textSize="22dp"
            android:layout_weight="1"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txtTTSPXuatXu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ma_san_pham"
            android:textSize="22dp"
            android:layout_weight="1"
            android:textAlignment="viewEnd"
            android:textColor="#666666"/>
    </LinearLayout>


</LinearLayout>