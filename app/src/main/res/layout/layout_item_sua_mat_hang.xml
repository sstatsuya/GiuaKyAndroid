<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_itemsuamathang_hinhanhsanpham"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/sanpham" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_itemsuamathang_tensanpham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:maxLength="20"
            android:text="@string/ten_san_pham"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_itemsuamathang_masanpham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="@string/ma_san_pham"
            android:textColor="#7A000000"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_itemsuamathang_soluongsanpham"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:text="Số lượng: 2"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <TextView
                android:id="@+id/tv_itemsuamathang_giatiensanpham"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Giá tiền"
                android:textColor="#127516" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>