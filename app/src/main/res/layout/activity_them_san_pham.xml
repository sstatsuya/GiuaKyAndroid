<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="24dp"

    tools:context="sanpham.SanPhamActivity">

    <LinearLayout
        style="@style/style_header_layout">

        <ImageView
            style="@style/style_logo"
            android:src="@drawable/icon" />

        <TextView
            style="@style/style_title"
            android:text="@string/them_san_pham" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgTSPHinh"
        android:layout_width="304dp"
        android:layout_height="266dp"
        android:layout_gravity="center"
        android:src="@drawable/empty" />

    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:background="@drawable/white_border_2">

        <EditText
            android:id="@+id/txtTSPTen"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/ten_san_pham"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/hint"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:background="@drawable/white_border_2">

        <EditText
            android:id="@+id/txtTSPGia"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/don_gia"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/hint"
            android:inputType="number"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:background="@drawable/white_border_2">

        <EditText
            android:id="@+id/txtTSPXuatXu"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="@string/xuat_xu"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/hint"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:background="@drawable/white_border_2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTSPHinh"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="@string/hinh_anh"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/hint"
            android:textSize="18dp" />

        <LinearLayout
            android:id="@+id/btn_them_sp_folder"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/folder_btn_background"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/folder_icon" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn_them_sp_camera"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/camera_btn_background"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/camera_icon" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout style="@style/style_pill_button_layout">
        <TextView
            android:id="@+id/btn_them_sp_dong_y"
            style="@style/style_pill_button"
            android:background="@drawable/nut_them_sp_dong_y"
            android:text="@string/dong_y"></TextView>

        <TextView
            android:id="@+id/btn_them_sp_huy"
            style="@style/style_pill_button"
            android:background="@drawable/nut_huy_white"
            android:text="@string/huy"
            android:textColor="@color/primary"></TextView>
    </LinearLayout>



</LinearLayout>