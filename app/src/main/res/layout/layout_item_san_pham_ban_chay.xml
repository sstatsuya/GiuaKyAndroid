<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_2"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_itemsanphambanchay_rank"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/primary_orange_borders"
        android:text="Top: 1"
        android:layout_marginVertical="20dp"
        style="@style/ed_Text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_border_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_itemsanphambanchay_hinhanhsanpham"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sanpham" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_itemsanphambanchay_tensanpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:maxLength="30"
                android:text="@string/ten_san_pham"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_itemsanphambanchay_masanpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/ma_san_pham"
                android:textColor="#7A000000"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/tv_itemsanphambanchay_soluong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Số lượng"
                android:textColor="#7A000000"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>