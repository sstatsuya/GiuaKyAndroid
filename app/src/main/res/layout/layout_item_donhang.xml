<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_border_background_shadow"
        android:orientation="vertical"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:layout_marginTop="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/tv_donhang_ma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mã đơn: DH0001"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_donhang_ngay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mã đơn: DH0001"
                android:textAlignment="textEnd"
                android:textColor="#999"
                android:textSize="12dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_donhang_ten_khachhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khách hàng Lương Minh Tiến"
                android:paddingHorizontal="12dp"
                android:textColor="@color/green" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_donhang_xem"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/thong_tin"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:background="@drawable/nut_xem_thongtin_donhang"
                    android:textSize="12dp"
                    style="@style/style_clickable" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/btn_donhang_xoa"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/xoa"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:background="@drawable/nut_xoa_donhang"
                    android:textSize="12dp"
                    style="@style/style_clickable"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>